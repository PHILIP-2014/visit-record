<div id="team-detail" px-aside-item aside-item-title="群信息" is-active="vm.partStatus.teamDetail" class="px-team-detail">

    <div class="px-accordion-group" px-accordion-group close-others="false" ng-controller="TeamDetailController">
        <!--群信息-->
        <px-accordion accordion-icon="info-circle-0" accordion-title="关于本群组" icon-color="#2095f2" is-expand="vm.teamInfo" on-toggle="onToggle($event,isExpand)" class="px-line-none">

            <div team-info-panel="">
                <div class="description" ng-bind="team.description" ng-if="team.description"></div>
                <div class="createTime">创建于<span ng-bind="team.gmtCreated|pxDate:'YYYY年M月D日'"></span></div>
                <ul class="list-unstyled team-tool-group" ng-if="team.isSystem!=1">
                    <li ng-click="editDescription()">
                        <span class="px-icon icon-pencil-0"></span>编辑群组话题
                    </li>
                    <li ng-click="addTeamMember()" style="color:#439FE0">
                        <span class="px-icon icon-user-add-0"></span>添加成员
                    </li>
                    <li ng-click="leaveTeam()">
                        <span class="px-icon icon-sign-out"></span>离开群组
                    </li>
                </ul>
            </div>
        </px-accordion>

        <!--群成员-->
        <px-accordion accordion-icon="user-0" accordion-title="群组成员"
                      accordion-subtitle="vm.teamMemberCount" icon-color="#009587"
                      is-expand="vm.teamMember" on-toggle="onToggle($event,isExpand)">
            <ul class="list-unstyled px-team-members" team-member-panel="">
                <li ng-repeat="member in teamMemberList" class="dropdown" dropdown="">
                    <div  dropdown-toggle="" aria-haspopup="true" aria-expanded="false">
                        <px-user-photo user="member.profile||member" size="mini" show-status="true" online="member.online" class="pull-left"></px-user-photo>
                        <span ng-bind="member|pxUserName" class="px-user-name px-text-ellipsis"></span>
                        <span class="px-label px-label-warning px-label-rectangular" style="position:absolute" ng-if="team.adminUid==member.targetUid||$index===0" >群主</span>
                    </div>
                    <user-menu user="member" team="team"  members="teamMemberList" position="right"></user-menu>

                </li>
            </ul>
        </px-accordion>


        <!--群组文档-->
        <px-accordion accordion-icon="file-0" accordion-subtitle="files.length||fileTotalLength" accordion-title="群组文档"
                      icon-color="#3e50b4" is-expand="vm.teamFile" on-toggle="onToggle($event,isExpand)">

            <file-panel show-toolbar="false" panel-type="team" conversation-id="vm.conversationId" page-size="100" config="vm"></file-panel>
        </px-accordion>

        <!--群组日程-->
        <px-accordion accordion-icon="calendar" accordion-subtitle="agendaGroups.length||agendasTotalLength" accordion-title="群组日程" icon-color="#2095f2" is-expand="vm.teamAgenda" on-toggle="onToggle($event,isExpand)">
            <div ng-controller="TeamAgendaController">
                <agenda-panel agenda-groups="agendaGroups" type="partial">

                </agenda-panel>
            </div>
        </px-accordion>

        <!--群组任务-->
        <px-accordion accordion-icon="task" accordion-subtitle="TaskGroups.length||taskTotalLength" accordion-title="群组任务" icon-color="#65ba69" is-expand="vm.teamTask" on-toggle="onToggle($event,isExpand)">
            <task-panel show-toolbar="false" conversation-id="vm.conversationId" panel-type="team" type="3" page-size="200"></task-panel>
        </px-accordion>
    </div>
</div>